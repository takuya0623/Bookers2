<div style = "width: 60%; margin: 0 auto">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<p><%=pluralize(@book.errors.full_messages.size,"error")%> error prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%=f.text_field :title %>
<h4>Body</h4>
<%=f.text_area :body %>
<div class="text-left">
<%= f.submit'Update Book',class: "btn-primar" %>
</div>

<table>
<tr>
<td><%= link_to"Show", book_path(@book.id) %></td>
<td><%=link_to"Back",books_path %></td>
</tr>
</table>

<% end %>