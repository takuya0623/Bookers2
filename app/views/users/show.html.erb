
<div class="container">
	<% if @user.errors.any? %>
  <div class="alert alert-warning">
  	<p><%=pluralize(@user.errors.full_messages.size,"error")%> error prohibited this book from being saved:</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     <% end %>
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user, book: @book %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-striped">
			<tr>
			<th>Title</th>
			<th>Opinion</th>
			</tr>
			<% @books.each do |book| %>
			<tr>
			<td class="title">
				<%= link_to book_path(book.id) do %>
				<%= book.title %>
				<% end %>
				</td>
			<td class="body"><%= book.body %></td>
			</tr>
			<% end %>
			</table>
 		</div>
	</div>
</div>