<h1>User info</h1>
<% if @user.errors.any? %>
  <div class="alert alert-warning">
  	<p><%=pluralize(@user.errors.full_messages.size,"error")%> error prohibited this book from being saved:</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@user) do |f| %>
	<table>
		<tr>
			<th>Name</th>
			<th><%= f.text_field :name %></th>
		</tr>
		</table>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img" %>
	<%= f.attachment_field :profile_image %>
	<table>
	<tr>
			<th>Introduction</th>
			<th><%= f.text_area :introduction %></th>
		</tr>
	</table>
	<div class="text-left">
	<%= f.submit "Update User" %>
<% end %>



